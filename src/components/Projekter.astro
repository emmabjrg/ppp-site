<div
  class="w-full max-w-3xl mx-auto p-4 bg-balticsea"
  x-data="{ currentProject: 0, projects: ['001 KÃ¸benhavn Billeder', '002 Another Project', '003 Third Project', '004 Fourth Project'] }"
>
  <div class="relative bg-white p-6 rounded-lg shadow-lg">
    <!-- Carousel content -->
    <div class="flex justify-between items-center">
      <button
        @click="currentProject = (currentProject - 1 + projects.length) % projects.length"
        class="text-gray-500 hover:text-gray-700"
      >
        &#8249;
      </button>

      <!-- Display project content -->
      <div class="text-center font-fragment-mono">
        <img src="/kobenhavnbilled.webp" alt="" class="rounded" />
        <h1
          class="text-3xl font-bold text-deepaqua"
          x-text="projects[currentProject]"
        >
        </h1>
        <p class="mt-4 text-greenwhite">
          Project content for <span x-text="projects[currentProject]"></span>
        </p>
      </div>

      <button
        @click="currentProject = (currentProject + 1) % projects.length"
        class="text-gray-500 hover:text-gray-700"
      >
        &#8250;
      </button>
    </div>

    <!-- Dots for carousel navigation -->
    <div class="mt-4 flex justify-center space-x-2">
      <template x-for="(project, index) in projects" :key="index">
        <button
          @click="currentProject = index"
          :class="currentProject === index ? 'bg-gray-900' : 'bg-gray-300'"
          class="w-3 h-3 rounded-full focus:outline-none"
        >
        </button>
      </template>
    </div>
  </div>
</div>
