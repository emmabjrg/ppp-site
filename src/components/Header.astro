<div
  class="bg-balticsea flex justify-between text-greenwhite p-2 items-center w-full fixed z-50"
>
  <a href="#herounit"><img src="/favicon.svg" alt="Logo" class="w-10 p-1" /></a>

  <!-- Burger-menu ikon til små skærme -->
  <button id="burger" class="block md:hidden p-2 focus:outline-none">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6 text-greenwhite"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>

  <!-- Navigationslinks til store skærme -->
  <nav class="hidden md:flex gap-10 px-4 font-fragment-mono text-sm">
    <a href="#ommig" class="hover:text-brightsun transition">Om mig</a>
    <a href="#kompetencer" class="hover:text-brightsun transition"
      >Færdigheder</a
    >
    <a href="#projekterne" class="hover:text-brightsun transition"
      >Tidligere projekter</a
    >
    <a href="#kontaktmig" class="hover:text-brightsun transition">Kontakt</a>
  </nav>

  <!-- Responsiv mobilmenu (skjult som standard) -->
  <nav
    id="menu"
    class="hidden md:hidden absolute top-16 left-0 w-full bg-balticsea flex flex-col items-center gap-6 p-4"
  >
    <a href="#ommig" class="hover:text-brightsun transition">Om mig</a>
    <a href="#kompetencer" class="hover:text-brightsun transition"
      >Færdigheder</a
    >
    <a href="#projekterne" class="hover:text-brightsun transition"
      >Tidligere projekter</a
    >
    <a href="#kontaktmig" class="hover:text-brightsun transition">Kontakt</a>
  </nav>
</div>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>

<!-- Script til at håndtere burger-menuens tilstand -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const burger = document.querySelector("#burger");
    const menu = document.querySelector("#menu");

    burger.addEventListener("click", function () {
      menu.classList.toggle("hidden");
    });
  });
</script>
